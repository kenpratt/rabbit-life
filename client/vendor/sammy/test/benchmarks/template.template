<div class="post">
  <h2 class="title"><%= post.title %></h2>
  <div class="body"><%= post.body %></div>
  <% for (var i = 0; i < post.tags.length; i++) { %>
    <span class="tags"><%= post.tags[i] %></span>
  <% } %>
  <ul class="meta">
    <li>Comments Count: <span class="comments"><%= post.meta.comments %></span></li>
  </ul>    
</div>